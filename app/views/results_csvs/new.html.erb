<% content_for :title, t('.title') %>

<div class="md:w-2/3 w-full mx-auto">
  <h1 class="font-bold text-4xl font-typewriter text-pencil mb-6">
    <%= t('.heading') %>
  </h1>

  <%= render "form", roll: @roll, results_csv: @results_csv %>

  <% back_path = params[:source] == 'roll' ? roll_path(@roll) : choose_method_rolls_path %>
  <%= link_to t('.back'), back_path,
              class: "w-full sm:w-auto text-center mt-4 sm:ml-2 rounded-md px-3.5 py-2.5 text-pencil/50 hover:text-pencil inline-block font-handwriting text-xl transition-colors" %>
</div>
