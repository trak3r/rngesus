<% content_for :title, "Randomizer: #{@randomizer.name || 'Missing'}" %>

<div class="md:w-2/3 w-full">

<div id="<%= dom_id @randomizer %>" class="w-full my-5 p-6 bg-base-200 rounded-xl shadow-md flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0">
  <div class="flex items-center text-2xl sm:text-3xl font-bold text-primary gap-2">
    <%= link_to randomizers_path do %>
      <%= icon('caret-left', class: "w-6 h-6 text-gray-500") %>
    <% end %>
    <%= @randomizer.name %>
  </div>
</div>

  <%= render 'rolls/index', rolls: @randomizer.rolls %>

  <div class="mt-4">
    <%= link_to "New roll", new_randomizer_roll_path(@randomizer), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-100 hover:bg-blue-50 inline-block font-medium" %>
    <%= link_to "Edit this randomizer", edit_randomizer_path(@randomizer), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Destroy this randomizer", @randomizer, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
