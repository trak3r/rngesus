<p style="color: green"><%= notice %></p>

<%= turbo_frame_tag dom_id(@randomizer) do %>
  <%= render @randomizer %>

  <div class="actions">
    <%= link_to "Edit", edit_randomizer_path(@randomizer), data: { turbo_frame: dom_id(@randomizer, :edit) } %>
    <%= link_to "Back", randomizers_path, data: { turbo_frame: "_top" } %>
    <%= button_to "Delete", @randomizer, 
          method: :delete, 
          data: { turbo_confirm: "Are you sure?" },
          class: "delete-button" %>
  </div>
<% end %>
