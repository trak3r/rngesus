<% content_for :title, "Randomizers" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Randomizers</h1>
    <%= link_to "New randomizer", new_randomizer_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="flex flex-wrap gap-4">
    <% if @randomizers.any? %>
      <% @randomizers.each do |randomizer| %>

        <div class="card bg-base-100 w-96 shadow-sm">
          <div class="card-body">
            <h2 class="card-title"><%= randomizer.name %></h2>

            <p>
              <%= randomizer.rolls.map { |r| h(r.name || 'Missing') }.join(' &middot; ').html_safe %>
            </p>

            <div class="card-actions justify-end">
              <%= link_to "Outcome", randomizer_outcomes_path(randomizer),
                class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-100 hover:bg-blue-50 inline-block font-medium" %>
              <%= link_to "Show", randomizer,
                class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
              <%= link_to "Edit", edit_randomizer_path(randomizer),
                class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
              <%= button_to "Destroy", randomizer, method: :delete,
                class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer",
                data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>

      <% end %>
    <% else %>
      <p class="text-center my-10">No randomizers found.</p>
    <% end %>
  </div>
</div>
