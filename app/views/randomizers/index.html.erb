<p style="color: green"><%= notice %></p>

<% content_for :title, "Randomizers" %>

<h1>Randomizers</h1>

<%= turbo_stream_from :randomizers %>

<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Randomizers</h1>
</div>

<div id="randomizers" class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <% @randomizers.each do |randomizer| %>
    <%= turbo_frame_tag dom_id(randomizer) do %>
      <%= turbo_frame_tag dom_id(randomizer, :edit) do %>
        <div class="rounded-lg bg-white p-6 shadow-sm ring-1 ring-gray-900/5">
          <%= render randomizer %>
          <div class="mt-4 flex items-center space-x-4">
            <%= link_to "Show", randomizer, 
                data: { turbo_frame: "_top" },
                class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
            <%= link_to "Edit", edit_randomizer_path(randomizer), 
                data: { turbo_frame: dom_id(randomizer, :edit) },
                class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
            <%= link_to "Delete", randomizer, 
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "text-sm font-medium text-red-600 hover:text-red-500" %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= turbo_frame_tag :new_randomizer do %>
  <div class="mt-8">
    <%= link_to new_randomizer_path,
        class: "inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      New randomizer
    <% end %>
  </div>
<% end %>
