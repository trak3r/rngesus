<% content_for :title, t('.title') %>

<div class="max-w-4xl mx-auto mt-8 px-4">
  <h1 class="font-bold text-4xl font-typewriter text-pencil mb-4 text-center">
    <%= t('.heading') %>
  </h1>
  <p class="text-center text-base-content/70 mb-12 font-handwriting text-xl">
    <%= t('.subtitle') %>
  </p>

  <div class="grid md:grid-cols-2 gap-8">
    <!-- Upload Screenshots Card -->
    <%= link_to new_randomizer_path(method: 'upload'), 
                class: "card-index hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 cursor-pointer group" do %>
      <div class="text-center p-8">
        <%= icon('photo-up', class: "w-24 h-24 mx-auto mb-6 text-pencil group-hover:scale-110 transition-transform") %>
        <h2 class="font-typewriter text-2xl font-bold text-pencil mb-4">
          <%= t('.upload_screenshots') %>
        </h2>
        <p class="font-handwriting text-lg text-base-content/70">
          <%= t('.upload_description') %>
        </p>
      </div>
    <% end %>

    <!-- Create By Hand Card -->
    <%= link_to new_randomizer_path(method: 'manual'),
                class: "card-index hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 cursor-pointer group" do %>
      <div class="text-center p-8">
        <%= icon('pencil', class: "w-24 h-24 mx-auto mb-6 text-pencil group-hover:scale-110 transition-transform") %>
        <h2 class="font-typewriter text-2xl font-bold text-pencil mb-4">
          <%= t('.create_by_hand') %>
        </h2>
        <p class="font-handwriting text-lg text-base-content/70">
          <%= t('.manual_description') %>
        </p>
      </div>
    <% end %>
  </div>

  <%= link_to t('.back'), randomizers_path, 
              class: "block text-center mt-8 text-pencil/50 hover:text-pencil font-handwriting text-xl transition-colors" %>
</div>
