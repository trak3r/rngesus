<div
  id="<%= dom_id randomizer %>"
  class="flex items-center justify-between p-4 bg-base-200 rounded-lg shadow hover:shadow-lg transition-shadow duration-200"
>
  <%= link_to randomizer_path(randomizer), class: "text-xl font-semibold text-blue-600 hover:text-blue-500 hover:underline" do %>
    <%= randomizer.name %>
  <% end %>

  <%= button_to randomizer,
      method: :delete,
      data: { turbo_confirm: "Are you sure?" },
      class: "btn btn-ghost btn-sm text-red-600 hover:text-red-500 transition-colors duration-150" do %>
    <%= icon "trash", class: "w-5 h-5" %>
  <% end %>
</div>
