<%= turbo_frame_tag dom_id(randomizer) do %>
  <%= link_to randomizer, data: { turbo_frame: "_top" }, class: "block rounded-lg bg-white p-6 shadow-sm ring-1 ring-gray-900/5 hover:shadow-md group" do %>
    <div class="flex justify-between items-center">
      <%= render randomizer %>
      <%= button_to randomizer, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this randomizer?" }, class: "text-gray-400 hover:text-red-500 opacity-0 group-hover:opacity-100 transition-opacity" do %>
        <%= icon("trash") %>
      <% end %>
    </div>
  <% end %>
<% end %>