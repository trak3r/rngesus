<% content_for :title, "Editing randomizer" %>

<%= turbo_frame_tag dom_id(@randomizer, :edit) do %>
  <div class="rounded-lg bg-white p-6 shadow-sm ring-1 ring-gray-900/5">
    <div class="space-y-6">
      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-lg font-medium text-gray-900">Edit Randomizer</h2>
      </div>

      <%= render "form", randomizer: @randomizer %>

      <div class="flex justify-end">
        <%= link_to "Cancel", randomizer_path(@randomizer),
            data: { turbo_frame: dom_id(@randomizer) },
            class: "rounded-md bg-white px-3.5 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      </div>
    </div>
  </div>
<% end %>
