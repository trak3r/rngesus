<div class="flex flex-col items-center justify-center space-y-4 mt-8">

  <%= link_to '/auth/developer', class: "btn btn-primary flex items-center justify-center w-64 h-12 space-x-2" do %>
    <%= icon('test-pipe', class: "w-5 h-5") %>
    <span>Login with Developer</span>
  <% end %>

  <%= link_to '/auth/google_oauth2', class: "btn btn-secondary flex items-center justify-center w-64 h-12 space-x-2" do %>
    <%= icon('brand-google', class: "w-5 h-5") %>
    <span>Login with Google</span>
  <% end %>

  <%# Dummy placeholders for Twitter and Facebook %>
  <button class="btn btn-accent flex items-center justify-center w-64 h-12 space-x-2 cursor-not-allowed opacity-60">
    <%= icon('brand-twitter', class: "w-5 h-5") %>
    <span>Login with Twitter</span>
  </button>

  <button class="btn btn-info flex items-center justify-center w-64 h-12 space-x-2 cursor-not-allowed opacity-60">
    <%= icon('brand-facebook', class: "w-5 h-5") %>
    <span>Login with Facebook</span>
  </button>

</div>

