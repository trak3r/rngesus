<%= turbo_frame_tag dom_id(result) do %>
  <%= form_with(model: result, class: "flex items-center gap-2 w-full") do |form| %>

    <!-- Value (2-digit number) -->
    <div class="w-16 flex-shrink-0">
      <%= form.number_field :value,
        class: [
          "w-full rounded-md border text-center shadow-sm px-2 py-1",
          {
            "border-gray-300 focus:border-blue-500 focus:ring-blue-500":
              result.errors[:value].none?,
            "border-red-400 focus:border-red-500 focus:ring-red-500":
              result.errors[:value].any?,
          },
        ],
        placeholder: "0" %>
    </div>

    <!-- Name -->
    <div class="flex-grow">
      <%= form.text_field :name,
        class: [
          "w-full rounded-md border shadow-sm px-3 py-1",
          {
            "border-gray-300 focus:border-blue-500 focus:ring-blue-500":
              result.errors[:name].none?,
            "border-red-400 focus:border-red-500 focus:ring-red-500":
              result.errors[:name].any?,
          },
        ],
        placeholder: "Name" %>
    </div>

    <!-- Save (icon only) -->
    <%= form.button type: "submit",
      class: "btn btn-ghost text-blue-600 hover:text-blue-800" do %>
      <%= icon("bookmark") %>
    <% end %>

    <!-- Delete -->
    <% if result.persisted? %>
      <%= link_to result_path(result),
        method: :delete,
        data: { turbo_confirm: "Are you sure?" },
        class: "btn btn-ghost text-red-600 hover:text-red-800" do %>
        <%= icon("trash") %>
      <% end %>
    <% end %>

  <% end %>
<% end %>

