<ul class="list bg-base-100 rounded-box shadow-md">
    <% if results.any? %>
      <% results.each do |result| %>

<li class="list-row flex items-center space-x-4 py-2">
  <!-- Fixed width for numbers (enough for 2 digits) -->
  <div class="w-12 text-4xl font-thin opacity-30 tabular-nums text-right">
    <%= result.value %>
  </div>

  <!-- Name cell vertically centered, slightly larger -->
  <div class="flex-1 flex items-center">
    <div class="text-lg font-thin"><%= result.name %></div>
  </div>

  <!-- Action buttons as icons -->
  <div class="flex flex-row space-x-2 w-auto">
    <!-- Edit icon (floppy / save) -->
    <%= link_to edit_result_path(result), class: "text-gray-500 hover:text-gray-700 p-2 rounded hover:bg-gray-100" do %>
      <%= icon(:pencil, class: "w-5 h-5") %>
    <% end %>

    <!-- Destroy icon (trash) -->
    <%= button_to result_path(result), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700 p-2 rounded hover:bg-red-100" do %>
      <%= icon(:trash, class: "w-5 h-5") %>
    <% end %>
  </div>
</li>
      <% end %>
    <% else %>
      <p class="text-center my-10">No results found.</p>
    <% end %>
</ul>
