<% content_for :title, @randomizer.name %>

<div class="max-w-4xl mx-auto py-10 px-4">

  <div class="flex items-center justify-between gap-3">
    <div class="text-2xl sm:text-3xl font-bold text-primary">
      <%= @randomizer.name %>
    </div>

    <div class="relative">
      <%= render "randomizers/like_button", randomizer: @randomizer %>
    </div>
  </div>

  <div class="grid gap-6">
    <% @randomizer.rolls.each_with_index do |roll, index| %>
      <% rolled, result = roll.outcome %>
      <%= render "outcome_card", roll: roll, rolled: rolled, result: result, randomizer: @randomizer, index: index %>
    <% end %>
  </div>
</div>
