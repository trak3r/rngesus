<header class="border-b-4 border-black bg-white py-4 px-6 sticky top-0 z-50">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-3xl font-bold font-header">
      <%= link_to root_path,
          class: "flex items-center space-x-2 text-black hover:text-dnd-red transition" do %>
        <%= icon('directions', class: "w-8 h-8") %>
        <span>RNGesus</span>
      <% end %>
    </h1>

    <nav class="flex items-center space-x-4">
      <% if current_user %>
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost flex items-center gap-2">
            <%= image_tag gravatar_url(current_user, size: 40),
                          alt: "#{current_user.display_name}'s avatar",
                          class: "w-10 h-10 rounded-full border-2 border-black" %>
            <span class="text-sm font-semibold"><%= current_user.display_name %></span>
            <%= icon('chevron-down', class: "w-4 h-4") %>
          </div>
          <ul tabindex="0" class="dropdown-content menu bg-white rounded-none border-2 border-black z-[1] w-52 p-2 shadow-lg mt-3">
            <li>
              <%= link_to edit_user_path, class: "flex items-center gap-2" do %>
                <%= icon('settings', class: "w-4 h-4") %>
                <span>Settings</span>
              <% end %>
            </li>
            <li>
              <%= link_to gravatar_profile_url(current_user),
                          target: "_blank",
                          rel: "noopener noreferrer",
                          class: "flex items-center gap-2" do %>
                <%= icon('user-circle', class: "w-4 h-4") %>
                <span>Edit Avatar</span>
              <% end %>
            </li>
            <div class="divider my-0"></div>
            <li>
              <%= button_to logout_path,
                            method: :delete,
                            class: "flex items-center gap-2 text-dnd-red hover:bg-red-50",
                            form: { data: { turbo: "false" } } do %>
                <%= icon('logout', class: "w-4 h-4") %>
                <span>Logout</span>
              <% end %>
            </li>
          </ul>
        </div>
      <% else %>
        <%= link_to "Log In",
                    login_path,
                    class: "btn-clean px-4 py-2" %>
      <% end %>
    </nav>
  </div>
</header>
