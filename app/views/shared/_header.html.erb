<header class="bg-base-100 shadow-md py-4 px-6 flex justify-between items-center">

<h1 class="text-2xl font-bold">
  <%= link_to root_path,
      class: "flex items-center space-x-2 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent hover:opacity-90 transition" do %>
    <%= icon('directions', class: "w-6 h-6 text-primary") %>
    <span>RNGesus</span>
  <% end %>
</h1>

<nav class="flex items-center space-x-4">
  <% if current_user %>
    <div class="flex items-center space-x-3 bg-base-200 px-4 py-2 rounded-lg shadow-sm">
      <%= link_to gravatar_profile_url(current_user),
                  target: "_blank",
                  rel: "noopener noreferrer",
                  title: "Edit your Gravatar",
                  class: "hover:opacity-80 transition" do %>
        <%= image_tag gravatar_url(current_user, size: 40),
                      alt: "#{current_user.name || current_user.uid}'s avatar",
                      class: "w-10 h-10 rounded-full border-2 border-primary" %>
      <% end %>
      
      <span class="text-sm font-medium text-base-content">
        <strong><%= current_user.provider.capitalize %></strong>
        &middot;
        <%= current_user.uid %>
      </span>

      <%= button_to "Logout",
                    logout_path,
                    method: :delete,
                    class: "btn btn-sm btn-outline btn-error ml-2" %>
    </div>
  <% else %>
    <%= link_to "Log In",
                login_path,
                class: "btn btn-primary btn-sm" %>
  <% end %>
</nav>

</header>
