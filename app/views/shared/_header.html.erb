<header class="bg-base-100 shadow-md py-4 px-6 flex justify-between items-center">

<h1 class="text-2xl font-bold">
  <%= link_to "RNGesus", root_path,
      class: "bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent hover:opacity-90 transition" %>
</h1>

<nav class="flex items-center space-x-4">
  <% if current_user %>
    <div class="flex items-center space-x-2 bg-base-200 px-4 py-2 rounded-lg shadow-sm">
      <span class="text-sm font-medium text-base-content">
        <strong><%= current_user.provider.capitalize %></strong>
        &middot;
        <%= current_user.uid %>
      </span>

      <%= button_to "Logout",
                    logout_path,
                    method: :delete,
                    class: "btn btn-sm btn-outline btn-error ml-2" %>
    </div>
  <% else %>
    <%= link_to "Log In",
                login_path,
                class: "btn btn-primary btn-sm" %>
  <% end %>
</nav>

</header>

