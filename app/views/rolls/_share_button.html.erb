<%# locals: (roll:) %>

<div data-controller="clipboard" data-clipboard-url-value="<%= roll_url(roll) %>" class="relative inline-flex items-center">
  <!-- Copied Notification (Left of button) -->
  <div data-clipboard-target="notification"
       class="absolute right-full top-1/2 -translate-y-1/2 mr-2 bg-black text-white px-2 py-1 rounded text-xs whitespace-nowrap opacity-0 hidden pointer-events-none transition-all duration-200 z-50 font-typewriter shadow-lg">
    <%= t('clipboard.copied') %>
  </div>

  <button data-action="click->clipboard#copy"
          class="transition flex items-center justify-center p-2 <%= roll.discarded? ? 'opacity-30 pointer-events-none' : 'text-base-content/50 hover:text-blue-600' %>"
          title="<%= t('clipboard.copy_title') %>">
    <%= icon 'share', variant: :outline, class: "w-6 h-6" %>
  </button>
</div>
