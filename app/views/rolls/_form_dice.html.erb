  <div class="flex items-center gap-4">
    <% Dice.predefined.each do |dice| %>
      <label class="cursor-pointer flex flex-col items-center group">
        <%= form.radio_button :dice,
          dice.name,
          checked: roll.dice == dice.name,
          class: "peer hidden" %>
        <div class="p-2 rounded-full border-2 border-base-content/30 peer-checked:border-primary peer-checked:bg-primary/10 peer-checked:ring-4 peer-checked:ring-primary/20 group-hover:scale-110 transition-all mt-4">
          <%= icon dice.icon, class: "w-8 h-8 text-base-content" %>
        </div>
        <span class="text-sm mt-1 font-handwriting text-xl text-base-content"><%= dice.name_alt || dice.name %></span>
      </label>
    <% end %>
  </div>
