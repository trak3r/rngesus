  <div class="flex items-center gap-4">
    <% [[2,"circle-stack"], [4,"exclamation-triangle"], [6,"cube"]].each do |value, icon_name| %>
      <label class="cursor-pointer flex flex-col items-center">
        <%= form.radio_button :dice, value, class: "hidden", checked: roll.dice == value %>
        <div class="p-2 rounded-md border-2 border-gray-300 hover:border-blue-500
                    <%= "border-blue-600" if roll.dice == value %>">
          <%= icon icon_name %>
        </div>
        <span class="text-sm mt-1"><%= value %></span>
      </label>
    <% end %>
  </div>

