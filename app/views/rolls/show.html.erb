<% content_for :title, @roll.name %>

<div class="max-w-4xl mx-auto py-10 px-4">

  <div class="relative flex items-center justify-center mb-8 w-full">
    <div class="flex items-center gap-3">
      <div class="text-xl sm:text-2xl font-bold font-typewriter text-base-content/60 text-center">
        <%= @roll.name %>
      </div>
      <% if current_user == @roll.user %>
        <%= link_to edit_roll_path(@roll), class: "btn btn-ghost btn-xs opacity-40 hover:opacity-100", title: "Edit Roll" do %>
          <%= icon(:edit) %>
        <% end %>
      <% end %>
    </div>

    <% # Pass position_classes: 'static' or empty to prevent absolute positioning inside this flex header %>
    <div class="absolute right-0">
      <%= render "like_button", roll: @roll, position_classes: "relative top-0 right-0" %>
    </div>
  </div>

  <div class="w-full mx-auto">
    <% # Ensure we have something to render if not rolled yet (e.g. initial load without JS rolling?) %>
    <% # Controller sets @rolled, @result %>
    <%= render "outcome_card", roll: @roll, rolled: @rolled, result: @result, animate: true %>
  </div>

  <div class="mt-8">
    <details class="collapse collapse-arrow border border-base-300 bg-base-100 rounded-box">
      <summary class="collapse-title text-xl font-medium font-handwriting text-center opacity-70 hover:opacity-100 transition-opacity">
        <%= t('rolls.show.see_all_results') %>
      </summary>
      <div class="collapse-content">
        <div class="overflow-x-auto">
          <table class="table table-zebra w-full text-center">
            <tbody>
              <% 
                 results = @roll.results.order(:value) 
                 max_roll = @roll.dice_object.try(:max) || 20 # Fallback if max calculation fails
              %>
              <% results.each_with_index do |res, index| %>
                <% 
                   min_val = res.value 
                   next_res = results[index + 1]
                   # Upper bound is next result's value - 1, or max_roll if this is the last result
                   max_val = next_res ? next_res.value - 1 : max_roll
                   
                   # Don't show range if min == max (e.g. D100 specific hits)
                   display_val = min_val == max_val ? min_val : "#{min_val} - #{max_val}"
                %>
                <tr>
                  <td class="font-mono text-center whitespace-nowrap px-4"><%= display_val %></td>
                  <td class="font-bold text-left w-full"><%= res.name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </details>
  </div>


</div>
