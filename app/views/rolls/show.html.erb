<% content_for :title, @roll.name %>

<div class="max-w-4xl mx-auto py-10 px-4">

  <div class="relative flex items-center justify-between gap-3 mb-6">
    <div class="flex items-center gap-4">
      <div class="text-2xl sm:text-3xl font-bold font-typewriter text-base-content">
        <%= @roll.name %>
      </div>
      <% if current_user == @roll.user %>
        <%= link_to edit_roll_path(@roll), class: "btn btn-ghost btn-sm" do %>
          <%= icon(:edit) %>
        <% end %>
      <% end %>
    </div>
    
    <%= render "like_button", roll: @roll %>
  </div>

  <div class="w-full max-w-lg mx-auto">
    <% # Ensure we have something to render if not rolled yet (e.g. initial load without JS rolling?) %>
    <% # Controller sets @rolled, @result %>
    <%= render "outcome_card", roll: @roll, rolled: @rolled, result: @result, animate: true %>
  </div>

  <% if current_user == @roll.user %>
     <div class="mt-8 text-center text-sm opacity-50">
        <%= link_to "Manage Results", edit_roll_path(@roll, anchor: "results"), class: "link link-hover" %>
     </div>
  <% end %>
  
  <div class="mt-4 text-center">
    <%= link_to "Back to Rolls", rolls_path, class: "link link-hover text-sm opacity-50" %>
  </div>

</div>
