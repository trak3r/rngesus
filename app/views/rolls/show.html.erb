<% content_for :title, "#{@roll.randomizer.name} > #{@roll.name}" %>

<div id="<%= dom_id @roll %>" class="card-index w-full my-5 flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0">
  <div class="flex items-center text-2xl sm:text-3xl font-bold font-typewriter gap-2">
    <%= link_to @roll.randomizer do %>
      <%= icon('caret-left', class: "w-6 h-6 text-pencil") %>
    <% end %>
    <%= link_to @roll.randomizer.name, @roll.randomizer, class: "text-pencil/60 hover:text-pencil transition-colors" %>
    <span class="text-pencil/40">></span>
    <%= @roll.name %>
    <% if current_user == @roll.randomizer.user %>
      <%= link_to edit_roll_path(@roll),
                  class: "text-pencil/50 hover:text-pencil p-2 rounded " do %>
        <%= icon(:edit, class: "w-5 h-5") %>
      <% end %>
    <% end %>
  </div>

  <div class="text-lg sm:text-xl text-pencil/80 flex items-center space-x-2 font-handwriting">
    <span class="font-medium"><%= @roll.dice_object.try(:name) || 'Missing' %></span>
    <span class="text-pencil/60">
      (<%= @roll.dice_object.try(:min) || '?' %>&#8209;<%= @roll.dice_object.try(:max) || '?' %>)
    </span>
  </div>
</div>

<%= render 'results/index', results: @roll.results %>

<% if current_user == @roll.randomizer.user %>
  <div class="mt-4">
    <%= link_to "New result", new_roll_result_path(@roll), class: "btn btn-primary" %>
    <%= link_to "Import from Screenshot", new_roll_results_img_path(@roll), class: "btn btn-primary" %>
    <%= link_to "Import from CSV", new_roll_results_csv_path(@roll), class: "btn btn-primary" %>
    <%= button_to "Destroy this roll", @roll, method: :delete, form_class: "inline-block", class: "btn btn-error", data: { turbo_confirm: "Are you sure?" } %>
  </div>
<% end %>
