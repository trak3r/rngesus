<% content_for :title, "Showing roll" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing roll</h1>

  <%= render @roll %>

  <div class="rounded-lg border border-gray-300 bg-white p-4 shadow-sm">
    <h2 class="text-lg font-semibold mb-2">Results</h2>
    <%= render "results/index", roll: @roll %>
  </div>

  <%= link_to "Manage results",
  randomizer_roll_results_path(@roll.randomizer, @roll),
  class:
    "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-100 hover:bg-blue-50 inline-block font-medium" %>
  <%= link_to "Edit this roll",
  edit_randomizer_roll_path(@roll.randomizer, @roll),
  class:
    "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to rolls",
  randomizer_rolls_path(@roll.randomizer),
  class:
    "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Destroy this roll",
  randomizer_roll_path(@roll.randomizer, @roll),
  method: :delete,
  form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2",
  class:
    "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer",
  data: {
    turbo_confirm: "Are you sure?",
  } %>
</div>
