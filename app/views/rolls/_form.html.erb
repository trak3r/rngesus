<%= form_with(
      model: roll,
      url: roll.persisted? ?
           roll_path(roll) :
           randomizer_rolls_path(roll.randomizer),
      method: roll.persisted? ? :patch : :post,
      class: "contents"
    ) do |form| %>
  <% if roll.errors.any? %>
    <div id="error_explanation" class="btn-error text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(roll.errors.count, "error") %> prohibited this roll from being saved:</h2>

      <ul class="list-disc ml-6">
        <% roll.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name,
                    class: [
                      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                      {
                        "border-gray-400 focus:outline-blue-600":
                          roll.errors[:name].none?,
                        "border-red-400 focus:outline-red-600":
                          roll.errors[:name].any?,
                      },
                    ] %>
  </div>

  <div class="my-5">
    <%= render 'form_dice', form: form, roll: roll %>
  </div>

  <div class="inline">
<%= form.submit "Submit",
      class: "btn btn-primary w-full sm:w-auto text-white rounded-md px-4 py-2 font-medium cursor-pointer" %>
  </div>
<% end %>
