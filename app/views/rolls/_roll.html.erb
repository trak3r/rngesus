<div id="<%= dom_id roll %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= roll.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Dice:</strong>
    <%= roll.dice %>
  </div>


<div class="flex space-x-2">
  <!-- Coin button -->
  <%= button_to "#", method: :get, class: "btn btn-square btn-ghost" do %>
    <%= icon("circle-stack") %>
  <% end %>

  <!-- Triangle / Pyramid button -->
  <%= button_to "#", method: :get, class: "btn btn-square btn-ghost" do %>
    <%= icon("exclamation-triangle") %>
  <% end %>

  <!-- Square / Cube button -->
  <%= button_to "#", method: :get, class: "btn btn-square btn-ghost" do %>
    <%= icon("cube") %>
  <% end %>
</div>

</div>
