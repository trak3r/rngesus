<div id="<%= dom_id roll %>" class="flex items-center justify-between rounded-md border p-3 bg-gray-50">
  <div class="text-sm text-gray-900">
    <div class="font-medium"><%= roll.name %></div>
    <div class="text-xs text-gray-600"><span class="text-xs text-gray-500">&middot; <%= time_ago_in_words(roll.created_at) %> ago</span></div>
  </div>

  <div class="text-right">
    <%= link_to "Delete", [roll.randomizer, roll], method: :delete, data: { turbo_confirm: "Delete this roll?" }, class: "text-sm text-red-600 hover:text-red-500" %>
  </div>
</div>
