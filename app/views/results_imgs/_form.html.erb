<div class="flex flex-col md:flex-row items-start justify-center gap-6 px-4 py-8">

  <!-- Upload Form -->
  <div class="w-full md:w-1/2 p-4 rounded-lg bg-base-100 dark:bg-base-200 shadow-sm">
    <%= form_with(model: @results_img, url: roll_results_imgs_path(@roll), local: true, html: { multipart: true }) do |form| %>

      <% if @results_img.errors.any? %>
        <div class="mb-3 text-error">
          <h2 class="font-semibold mb-1"><%= pluralize(@results_img.errors.count, "error") %> prevented this file from uploading:</h2>
          <ul class="list-disc ml-5 text-sm">
            <% @results_img.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.file_field :file,
          accept: ".png,.jpg,.jpeg",
          class: "file-input file-input-primary w-full" %>
      </div>

      <%= form.submit "Upload screenshot",
        class: "btn btn-primary w-full text-base font-medium py-2" %>

    <% end %>
  </div>

  <!-- "For Best Results" Box -->
  <div class="w-full md:w-1/2 p-4 rounded-lg bg-base-200 dark:bg-base-300 shadow-sm flex flex-col">

<h3 class="text-base font-semibold mb-2">For Best Results!</h3>

<ul class="list-disc list-inside text-sm text-base-content/70 space-y-1 mb-3">
  <li>Crop your screenshot to just a two-column table </li>
  <li>Zoom in as much as possible; the bigger, the better</li>
</ul>

<p class="text-sm text-base-content/70">Example:</p>

    <%= image_tag "forest_encounters_p154.png", alt: "Example screenshot", class: "w-full" %>
  </div>

</div>
